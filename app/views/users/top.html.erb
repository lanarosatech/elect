<div class="master-container pt-1 pb-1" style="background-color: #cd9046;>

  <div class="container mt-5 mb-5">

    <h2 class="text-center my-4" style="color: #FFFFFF; font-weight: 500">See who matches your profile!</h2>


  <% if current_user.orientation == "left-wing" %>
    <div class="row-search-show">
      <% @users.each do |user| %>
        <% if user.role == "candidate" && user.state == current_user.state && (user.party == "PT" || user.party == "PSOL") %>
          <div class="col-2">
            <div class="card mt-4" style="width: 9rem;">
              <img class="img-search-show">
                <%= image_tag user.photo %>
              <div class="card-body-search-show">
                <p class="card-text-search-show"><%= user.name %><br/>
                <p class="card-text-search-show"><%= user.state %><br/>
                <p class="card-text-search-show"><%= user.party %><br/>
                <p class="card-text-search-show"><%= user.role %><br/>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  <% elsif current_user.orientation == "right-wing" %>
    <div class="row-search-show">
      <% @users.each do |user| %>
        <% if user.role == "candidate" && user.state == current_user.state && (user.party == "Republicanos" || user.party == "PL") %>
          <div class="col-2">
            <div class="card mt-4" style="width: 9rem;">
              <img class="img-search-show">
                <%= image_tag user.photo %>
              <div class="card-body-search-show">
                <p class="card-text-search-show"><%= user.name %><br/>
                <p class="card-text-search-show"><%= user.state %><br/>
                <p class="card-text-search-show"><%= user.party %><br/>
                <p class="card-text-search-show"><%= user.role %><br/>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  <% elsif current_user.orientation == "centrist" %>
    <div class="row-search-show">
      <% @users.each do |user| %>
        <% if user.role == "candidate" && user.state == current_user.state && (user.party == "MDB" || user.party == "PSD") %>
          <div class="col-2">
            <div class="card mt-4" style="width: 9rem;">
              <img class="img-search-show">
                <%= image_tag user.photo %>
              <div class="card-body-search-show">
                <p class="card-text-search-show"><%= user.name %><br/>
                <p class="card-text-search-show"><%= user.state %><br/>
                <p class="card-text-search-show"><%= user.party %><br/>
                <p class="card-text-search-show"><%= user.role %><br/>
              </div>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  <% else %>
      <h5 class="text-center mt-5 pt-5 mb-2 pb-2" style="color: #FFFFFF; font-weight: 500">No candidates match your profile so far.</h5>
      <h5 class="text-center" style="color: #FFFFFF; font-weight: 500">Maybe you could answer the questions and come back to check your results later on.</h5>
      <div class = "row justify-content-center pt-5">
        <div class="col-2">
          <%= link_to "Answer questions", questions_path, class: "btn btn-flat mb-2 mt-2" %>
        </div>
      </div>
  <% end %>

    <div class="row justify-content-end">
      <div class="col-2">
        <a><%= link_to "See all candidates", searches_path, class: "btn btn-flat mb-2 mt-2" %></a>
      </div>
    </div>

  </div>

</div>




























