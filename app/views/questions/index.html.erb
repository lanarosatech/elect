<div class="container" style="width: 45%;">
  <% @questions.each do |question| %>
    <div class="all_card">
        <div class="question_card">
          <h4><%= question.content %></h4>
        </div>
          <%= simple_form_for(@user_answer) do |f| %>
            <div class="question_answers_card">
              <%= f.input :answer, as: :radio_buttons, collection: question.answers.pluck(:content), legend_tag: false %>
            </div>
              <div class="button">
                <%#= f.submit "Confirm Answer", class:"btn btn-primary"%>
              </div>
          <% end %>
    </div>
  <% end %>
  <%= link_to "Submit answers", user_path(current_user), data: {turbo_method: :patch}, class: "btn btn-primary" %>
</div>
